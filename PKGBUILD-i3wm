# Maintainer: joekamprad    <joekamprad@endeavouros.com>
pkgname=endeavouros-i3-config
pkgver=1.1
pkgrel=1
pkgdesc='Default EndeavourOS i3 config files'
arch=('any')
url='https://www.endeavouros.com'
license=('GPL3')
source=("https://github.com/endeavouros-team/endeavouros-i3wm-setup")
sha512sums=('')

prepare() {
git clone https://github.com/endeavouros-team/endeavouros-i3wm-setup
cd endeavouros-i3wm-setup
cp -R .config $srcdir/skel/
cp .gtkrc-2.0 $srcdir/skel/
cp .nanorc $srcdir/skel/
cp xed.dconf $srcdir/skel/
cd ..
rm -R endeavouros-i3wm-setup
}

package() {
    install -dm 755 $pkgdir/etc/skel
    cp -r --no-preserve=ownership endeavouros-i3-config/skel $pkgdir/etc/skel
}
